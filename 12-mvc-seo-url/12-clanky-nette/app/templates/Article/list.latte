{block content}

  <h1 n:block="title">Přehled článků</h1>

  {if !empty($articles)}
    <ul>
      {foreach $articles as $article}
        <li><a href="{link Article:view id=>$article['id']}">{$article['title']}</a></li>
      {/foreach}
    </ul>
  {else}
    <p>Nebyly nalezeny žádné články</p>
  {/if}